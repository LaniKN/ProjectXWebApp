                                            <label for="@Model.Courses<course>.CourseCode">@Model.Course.CourseCode , @Model.Course.Name </label>
                                        </li>
                                    } *@
                                </ul>
                                <p>This is working! Course is not null</p>
                            </div>
                        } else {
                            <p>Uh Oh! You haven't selected your major! Please select a major!</p>
                        };
                    </form>
                    
                </div>
                <div class="modal-footer">
                    <button id="coursesSave" class="btn" data-save="modal">Save</button>
                </div>
            </div>
        </div>
    </div>

<script>
    $('#coursesClosePopUp').click(function(){
        $('#coursesPartial').hide();
    })
</script>

