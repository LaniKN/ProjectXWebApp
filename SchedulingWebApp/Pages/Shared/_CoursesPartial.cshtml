@model IEnumerable<SchedulingWebApp.Data.Model.Course>

@{
    Layout =null;
}

    <div class="modal fade" id="coursesModal" asp-page-handler="CoursesPartial" tabindex="-1" role="dialog">
        <div class="partialBody modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h1 class="modal-title">Select Courses:</h1>
                    <button id="coursesClosePopUp" type="button" class="closeModal" data-dismiss="modal">&times;</button>
                </div>
                <div class="modal-body">
                    @if (Model.Count() != 0){
                        <p>Please select all courses that you have already taken and/or have credits for:</p>
                        <form asp-asp-page-handler="CoursesPartial" class="containSelect" action="post">
                            <ul id="courses" name="courses">
                                @foreach(var elem in Model){
                                    <label>
                                        <input type="checkbox" value="@elem"/>
                                        @elem.CourseCode @elem.CourseName 
                                    </label>
                                }
                            </ul> 
                        </form>
                    } else {
                        <p>Uh oh, you haven't selected a major!</p>
                    }
                </div>
                <div class="modal-footer">
                    @if (Model != null){
                        <button id="coursesSave" class="btn" data-save="modal">Save</button>
                    }
                </div>
            </div>
        </div>
    </div>

