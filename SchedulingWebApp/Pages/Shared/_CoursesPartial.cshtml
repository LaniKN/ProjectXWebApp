@model SchedulingWebApp.Data.Model.CourseViewModel

@{
    Layout =null;
}

    <div class="modal fade" id="coursesModal" asp-page-handler="CoursesPartial" tabindex="-1" role="dialog">
        <div class="partialBody modal-dialog" role="document"
            <div class="modal-content">
                <div class="modal-header">
                    <h1 class="modal-title">Select Courses:</h1>
                    <button id="coursesClosePopUp" type="button" class="closeModal" data-dismiss="modal">&times;</button>
                </div>
                <div class="modal-body">
                    <p>Please select all courses that you have already taken and/or have credits for:</p>
                    <form asp-asp-page-handler="CoursesPartial" class="containSelect">
                        @if (Model.Courses != null){
                            <div class="courses">
                                <ul>
                                    @* @foreach (var course in Model.Courses){
